<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:orientation="vertical"
    android:background="@drawable/login_page_background"
     >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/page_header_background"
        
        
         >

        <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"

            
            >

         

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Trip"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

      
<LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:layout_alignParentRight="true"
               android:layout_marginTop="9dp"
               >
                   <TextView
               android:id="@+id/textViewBatteryLevel"
               android:layout_width="40dp"
               android:layout_height="25sp"
                
               android:layout_marginTop="1dp"
               android:background="@drawable/battery_levels"
               android:text=" 45%"
               android:textAlignment="center"
               android:textColor="#000000"
               android:textIsSelectable="true"
               android:textSize="18sp" />

                   <TextView
                       android:id="@+id/nwLabel"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:background="#ffffff"
                       android:text="56%"
                       android:layout_marginLeft="8dp"
                       android:textColor="#000000"
                       android:textSize="18sp" />

                   <ImageView
                       android:id="@+id/imageView1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/range_level" />
     		 
               
           </LinearLayout>
     

       

       

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
             android:layout_marginRight="8dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        
        	<EditText
        android:id="@+id/dateText"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:editable="false"
         android:background="@drawable/edit_text_background"
         android:textAlignment="center"
         android:layout_marginLeft="25dp"
         
         
        android:ems="10" >

        <requestFocus />
    </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
             android:layout_marginRight="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Trips"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/spinnerTripLabels"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
               
                android:background="@drawable/edit_text_background" />

        </LinearLayout>

    <ImageButton
        android:id="@+id/showtriptimes"
        android:layout_width="150dp"
        android:layout_height="60dp"
       
       
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/download"
         />
    <TextView android:textIsSelectable="true" android:id="@+id/errorLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#dd0000" />
	<ProgressBar
	      android:id="@+id/progressBar1"
	      style="?android:attr/progressBarStyleLarge"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:visibility="gone"
	      android:layout_below="@+id/button1"
	      android:layout_centerHorizontal="true"
	      
	       />
    

</LinearLayout>